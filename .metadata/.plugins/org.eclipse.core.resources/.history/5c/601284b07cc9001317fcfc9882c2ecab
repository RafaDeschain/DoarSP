public class ApapterDAO {
	private SQLiteDatabase database;
	private UtilsDAO Utils;
	private String[] allColumns = { Utils.ID, Utils.TPSANGUINEO, Utils.NOME, Utils.EMAIL, Utils.NOTIFICAOPUSH, Utils.NOTIFICACAOEMAIL, 
									Utils.STATUSAPTO, Utils.DTDULTIMADOACAO, Utils.DTDNASCIMENTO, Utils.ARQFOTO  };
	private String[] updateColumns = { Utils.TPSANGUINEO, Utils.NOME, Utils.EMAIL, Utils.NOTIFICAOPUSH, Utils.NOTIFICACAOEMAIL, 
			Utils.STATUSAPTO, Utils.DTDULTIMADOACAO, Utils.DTDNASCIMENTO};

	
	public ApapterDAO(Context context){
		Utils = new UtilsDAO(context);
	}
	
	public UserModel alterarDados(UserModel Usuario)
	{
		ContentValues values = new ContentValues();		
		values.put(Utils.TPSANGUINEO, Usuario.getTpSanguineo());
		values.put(Utils.NOME, Usuario.getNome());
		values.put(Utils.EMAIL, Usuario.geteMail());
		values.put(Utils.NOTIFICAOPUSH, Usuario.getNotificacaoPush());
		values.put(Utils.NOTIFICACAOEMAIL, Usuario.getNotificacaoEmail());
		values.put(Utils.STATUSAPTO, Usuario.getStatusApto());
		values.put(Utils.DTDULTIMADOACAO, Usuario.getDtdUltimaDoacao());		
		String whereClause = " " + Utils.ID + " = " + Usuario.getCodUsuario();
		
		database.update(Utils.TABLE_NAME, values, whereClause, null);
		
		Cursor query = database.query(Utils.TABLE_NAME, allColumns, whereClause, null, null, null, null);
		query.moveToFirst();
		UserModel UserData = new UserModel();
		UserData.setCodUsuario(query.getInt(0));
		UserData.setTpSanguineo(query.getInt(1));
		
	}
	
}
