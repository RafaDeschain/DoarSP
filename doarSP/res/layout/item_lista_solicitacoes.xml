<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >
	
    <LinearLayout
        android:id="@+id/LLSolicitacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ListaSolicitacoesNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="5dp"
            android:text="Nome do Hemocentro"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ListaSolicitacoesEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereco do hemocentro" />
        
        <TextView
	        android:id="@+id/ListaSolicitacoesQuantidade"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/LLSolicitacoes"
	        android:layout_below="@+id/LLSolicitacoes"
	        android:text="Quantidade de solicitacoes" />
    </LinearLayout>
    <TextView
        android:id="@+id/ListaIdHemocentro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/LLSolicitacoes"
        android:text="ID" />
</RelativeLayout>