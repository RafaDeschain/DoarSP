<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/imagemPosto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_info" 
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/nomePosto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imagemPosto"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/endPosto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomePosto"
        android:layout_below="@+id/quantSolicitacoes"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/quantSolicitacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomePosto"
        android:layout_toRightOf="@+id/imagemPosto"
        android:text="@+string/quantSolicitacao0" />

</RelativeLayout>